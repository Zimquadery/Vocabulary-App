<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="MainController">
   <children>
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <children>
            <Label styleClass="title" text="Simple Vocabulary App">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <Label styleClass="spacer" HBox.hgrow="ALWAYS" />
            <Button fx:id="adminButton" onAction="#handleAdmin" styleClass="admin-button" text="Admin" />
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </HBox>
      
      <VBox spacing="15.0">
         <children>
            <Label styleClass="section-label" text="Search for a word:">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
            
            <HBox spacing="10.0">
               <children>
                  <TextField fx:id="searchField" prefWidth="400.0" promptText="Enter word to search..." styleClass="search-field" />
                  <Button fx:id="searchButton" onAction="#handleSearch" styleClass="search-button" text="Search" />
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </HBox>
            
            <Label fx:id="statusLabel" styleClass="status-label" />
            
            <TextArea fx:id="resultArea" editable="false" prefHeight="200.0" prefWidth="560.0" promptText="Search results will appear here..." styleClass="result-area" wrapText="true" />
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
         </padding>
      </VBox>
   </children>
</VBox>
